<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_image"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/details_profile"
            android:src="@drawable/ic_person_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_image"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_profile_title"
            android:text="Profile name"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_profile"
            app:layout_constraintBottom_toBottomOf="@id/details_profile"
            app:layout_constraintStart_toEndOf="@id/details_profile" />

        <ImageView
            android:id="@+id/details_location"
            android:src="@drawable/ic_location_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_profile"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_location_title"
            android:text="Location"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_location"
            app:layout_constraintBottom_toBottomOf="@id/details_location"
            app:layout_constraintStart_toEndOf="@id/details_location" />

        <ImageView
            android:id="@+id/details_date"
            android:src="@drawable/ic_date_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_location"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_date_title"
            android:text="Date"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_date"
            app:layout_constraintBottom_toBottomOf="@id/details_date"
            app:layout_constraintStart_toEndOf="@id/details_date" />

        <ImageView
            android:id="@+id/details_likes"
            android:src="@drawable/ic_location_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_date"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_likes_title"
            android:text="100 Likes"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_likes"
            app:layout_constraintBottom_toBottomOf="@id/details_likes"
            app:layout_constraintStart_toEndOf="@id/details_likes" />

        <ImageView
            android:id="@+id/details_downloads"
            android:src="@drawable/ic_download_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_likes"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_downloads_title"
            android:text="1000 downloads"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_downloads"
            app:layout_constraintBottom_toBottomOf="@id/details_downloads"
            app:layout_constraintStart_toEndOf="@id/details_downloads" />

        <ImageView
            android:id="@+id/details_color"
            android:src="@drawable/ic_palette_black"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_downloads"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_color_title"
            android:text="Color is black"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/details_color"
            app:layout_constraintBottom_toBottomOf="@id/details_color"
            app:layout_constraintStart_toEndOf="@id/details_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
