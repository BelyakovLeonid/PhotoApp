<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="200">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/floating_menu" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end"
        app:duration="200">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/background_view" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end"
        app:duration="200">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/floating_menu1" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end"
        app:duration="200">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/floating_menu2" />
    </Transition>

    <Transition
        app:constraintSetEnd="@id/start"
        app:constraintSetStart="@id/end"
        app:duration="200">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/floating_menu3" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/floating_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            app:layout_constraintBottom_toTopOf="@id/floating_menu"
            app:layout_constraintEnd_toEndOf="@id/floating_menu"
            app:layout_constraintStart_toStartOf="@id/floating_menu" />
        <Constraint
            android:id="@+id/floating_menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            app:layout_constraintBottom_toTopOf="@id/floating_menu1"
            app:layout_constraintEnd_toEndOf="@id/floating_menu1"
            app:layout_constraintStart_toStartOf="@id/floating_menu1" />
        <Constraint
            android:id="@+id/floating_menu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            app:layout_constraintBottom_toTopOf="@id/floating_menu2"
            app:layout_constraintEnd_toEndOf="@id/floating_menu2"
            app:layout_constraintStart_toStartOf="@id/floating_menu2" />
        <Constraint
            android:id="@+id/menu_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/floating_menu1"
            app:layout_constraintEnd_toStartOf="@id/floating_menu1"
            app:layout_constraintTop_toTopOf="@id/floating_menu1" />
        <Constraint
            android:id="@+id/menu_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/floating_menu2"
            app:layout_constraintEnd_toStartOf="@id/floating_menu2"
            app:layout_constraintTop_toTopOf="@id/floating_menu2" />
        <Constraint
            android:id="@+id/menu_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/floating_menu3"
            app:layout_constraintEnd_toStartOf="@id/floating_menu3"
            app:layout_constraintTop_toTopOf="@id/floating_menu3" />
        <Constraint
            android:id="@+id/background_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:alpha="0.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/floating_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:rotation="179.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/floating_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:layout_constraintBottom_toTopOf="@id/floating_menu"
            app:layout_constraintEnd_toEndOf="@id/floating_menu"
            app:layout_constraintStart_toStartOf="@id/floating_menu" />
        <Constraint
            android:id="@+id/floating_menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:layout_constraintBottom_toTopOf="@id/floating_menu1"
            app:layout_constraintEnd_toEndOf="@id/floating_menu1"
            app:layout_constraintStart_toStartOf="@id/floating_menu1" />
        <Constraint
            android:id="@+id/floating_menu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:layout_constraintBottom_toTopOf="@id/floating_menu2"
            app:layout_constraintEnd_toEndOf="@id/floating_menu2"
            app:layout_constraintStart_toStartOf="@id/floating_menu2" />
        <Constraint
            android:id="@+id/menu_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@id/floating_menu1"
            app:layout_constraintEnd_toStartOf="@id/floating_menu1"
            app:layout_constraintTop_toTopOf="@id/floating_menu1" />
        <Constraint
            android:id="@+id/menu_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@id/floating_menu2"
            app:layout_constraintEnd_toStartOf="@id/floating_menu2"
            app:layout_constraintTop_toTopOf="@id/floating_menu2" />
        <Constraint
            android:id="@+id/menu_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@id/floating_menu3"
            app:layout_constraintEnd_toStartOf="@id/floating_menu3"
            app:layout_constraintTop_toTopOf="@id/floating_menu3" />
        <Constraint
            android:id="@+id/background_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:alpha="0.8" />
    </ConstraintSet>

</MotionScene>